<section class="user-section">
  <div class="d-flex align-items-center">
    <h2 class="d-inline-flex"><%= "Name: #{@user.name}" %></h2>
    <%= friendship_controls(@user) %>
  </div>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
